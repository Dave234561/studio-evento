// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  avatar      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  conversations Conversation[]
  projects      Project[]
  
  @@map("users")
}

model Conversation {
  id          String   @id @default(cuid())
  title       String?
  status      ConversationStatus @default(ACTIVE)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  userId      String @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    Message[]
  projectId   String? @map("project_id")
  project     Project? @relation(fields: [projectId], references: [id])
  
  @@map("conversations")
}

model Message {
  id            String    @id @default(cuid())
  content       String
  role          MessageRole
  agentType     AgentType? @map("agent_type")
  model         String?   // "sonnet-4" or "opus-4"
  tokens        Int?
  latency       Int?      // in milliseconds
  createdAt     DateTime  @default(now()) @map("created_at")
  
  // Relations
  conversationId String @map("conversation_id")
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  // Context and metadata
  context       Json?
  metadata      Json?
  
  @@map("messages")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      ProjectStatus @default(PLANNING)
  budget      Float?
  deadline    DateTime?
  venue       String?
  attendees   Int?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  userId      String @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversations Conversation[]
  documents   Document[]
  
  // Event specific data
  eventType   String? @map("event_type")
  requirements Json?
  constraints Json?
  
  @@map("projects")
}

model Document {
  id          String   @id @default(cuid())
  title       String
  type        DocumentType
  content     String
  version     Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  // Relations
  projectId   String @map("project_id")
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@map("documents")
}

model Cache {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Json
  embedding   String?  // Vector embedding for semantic search
  agentType   AgentType @map("agent_type")
  model       String
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")
  
  // Usage tracking
  hitCount    Int      @default(0) @map("hit_count")
  lastAccess  DateTime @default(now()) @map("last_access")
  
  @@map("cache")
}

model Analytics {
  id          String   @id @default(cuid())
  eventType   String @map("event_type")   // "conversation_start", "agent_call", "user_action", etc.
  agentType   AgentType? @map("agent_type")
  model       String?
  userId      String? @map("user_id")
  data        Json
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("analytics")
}

enum ConversationStatus {
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AgentType {
  ORCHESTRATOR
  STORYTELLING
  RSE
  VENUE
  BRIEF_GENERATOR
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

enum DocumentType {
  BRIEF
  PROPOSAL
  TIMELINE
  BUDGET
  VENDOR_LIST
  RSE_REPORT
  CREATIVE_CONCEPT
}