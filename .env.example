# ============================================
# STUDIO EVENTO - VARIABLES D'ENVIRONNEMENT
# ============================================

# ------------------------------------------------
# APIs IA (OBLIGATOIRES)
# ------------------------------------------------

# Anthropic API pour Claude 3.5 Sonnet
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API pour GPT-4 et DALL-E 3
OPENAI_API_KEY=your_openai_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# ------------------------------------------------
# RECHERCHE WEB (OPTIONNEL)
# ------------------------------------------------

# Serper API pour recherche web contextuelle
SERPER_API_KEY=your_serper_key_here

# ------------------------------------------------
# SUPABASE (OBLIGATOIRE pour persistance)
# ------------------------------------------------

# URL publique de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Clé publique anonyme
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Clé de service (admin)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ------------------------------------------------
# FIREBASE AUTH (OBLIGATOIRE pour authentification)
# ------------------------------------------------

# Configuration Firebase côté client
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Configuration Firebase Admin SDK
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# ------------------------------------------------
# REDIS (OPTIONNEL - cache)
# ------------------------------------------------

# URL Redis pour cache (laisser vide pour désactiver)
REDIS_URL=

# ------------------------------------------------
# CONFIGURATION DÉVELOPPEMENT
# ------------------------------------------------

# URL de base pour les appels API
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Mode de développement
NODE_ENV=development

# ------------------------------------------------
# CONFIGURATION PRODUCTION (Vercel)
# ------------------------------------------------

# Définir automatiquement par Vercel:
# NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app
# NODE_ENV=production